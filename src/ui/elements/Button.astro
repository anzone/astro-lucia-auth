---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"button"> & {
  variant?: "solid" | "outline";
};

const { variant = "solid", ...props } = Astro.props;
---

<button
  class="transition-colors inline-block rounded border text-sm border-indigo-600 px-4 py-2"
  class:list={{
    "bg-indigo-600 font-medium text-white hover:bg-transparent hover:text-indigo-600 focus:outline-none focus:ring active:text-indigo-500":
      variant === "solid",
    "font-medium text-indigo-600 hover:bg-indigo-600 hover:text-white focus:outline-none focus:ring active:bg-indigo-500":
      variant === "outline",
  }}
>
  <slot />
</button>
